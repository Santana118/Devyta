@{
    ViewData["Title"] = "Riwayat Perbaikan";
    Layout = "_StaffTemplate";
}

<div class="card">
    <div class="card-body">
        <h3>Riwayat Perbaikan</h3>
        <p>
            <a class="btn btn-primary" asp-action="TambahPerbaikan" asp-controller="Perbaikan">
                Tambah Perbaikan Aset
            </a>
        </p>
        @*table*@
        <table class="table" id="table_perbaikan">
            <thead>
                <tr>
                    <th>No</th>
                    <th>
                        Aset
                    </th>
                    <th>
                        Peminjam
                    </th>
                    <th>
                        Kerusakan
                    </th>
                    <th>
                        Biaya
                    </th>
                    <th>
                        Jumlah
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Tgl Terima
                    </th>
                    <th>
                        Tgl Selesai
                    </th>
                    <th>
                        Aksi
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


@*modal*@
<div class="modal fade" id="perbaikanModal" tabindex="-1" aria-labelledby="perbaikanModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Peminjaman Aset</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group">
                        <label for="barang_id">ID Aset</label>
                        <input type="number" class="form-control" id="barang_id">
                        <span class="text-danger text-sm-left" id="errorBarang_id"></span>
                    </div>
                    <div class="form-group">
                        <label for="karyawan_id">ID Karyawan</label>
                        <input type="number" class="form-control" id="karyawan_id">
                        <span class="text-danger text-sm-left" id="errorKaryawan_id"></span>
                    </div>

                    <div class="form-group">
                        <label for="keterangan">Kerusakan</label>
                        <input type="text" class="form-control" id="keterangan">
                        <span class="text-danger text-sm-left" id="errorKeterangan"></span>
                    </div>
                    <div class="form-group">
                        <label for="tanggal_terima">Tanggal Terima</label>
                        <input type="date" class="form-control" id="tanggal_terima">
                        <span class="text-danger text-sm-left" id="errorTanggal_terima"></span>
                    </div>
                    <div class="form-group">
                        <label for="jumlah">Jumlah</label>
                        <input type="number" class="form-control" id="jumlah" min="1">
                        <span class="text-danger text-sm-left" id="errorJumlah"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="Update()">Submit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/perbaikan/index.js"></script>
}
