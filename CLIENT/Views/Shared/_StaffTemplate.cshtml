@{
    @using Microsoft.AspNetCore.Http;
} 
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Devyta</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skyadmin/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skyadmin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skyadmin/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/skyadmin/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/skyadmin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/skyadmin/js/select.dataTables.min.css">
