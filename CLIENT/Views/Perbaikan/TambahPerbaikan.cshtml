
@{
    ViewData["Title"] = "Index";
    Layout = "_StaffTemplate";
}

<div class="card shadow">
    <div class="card-body">
        <h3>Permintaan Perbaikan</h3>
        <div class="my-2">
            <a  asp-action="Index" asp-controller="Perbaikan">
                Kembali
            </a>
        </div>
        @*table*@
        <div class="table-responsive">
            <table class="table" id="table_peminjaman">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>
                            Aset
                        </th>
                        <th>
                            Peminjam
                        </th>
                        <th>
                            Tanggal Pinjam
                        </th>
                        <th>
                            Tanggal Kembali
                        </th>
                        <th>
                            Jumlah
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Aksi
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>


    </div>
</div>


@*modal*@
<div class="modal fade" id="perbaikanModal" tabindex="-1" aria-labelledby="perbaikanModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Perbaikan Aset</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="0" id="barang_id">
                <input type="hidden" value="0" id="karyawan_id">
                <form>
                    <div class="form-group">
                        <label for="keterangan">Kerusakan</label>
                        <input type="text" class="form-control" id="keterangan">
                        <span class="text-danger text-sm-left" id="errorKeterangan"></span>
                    </div>
                    <div class="form-group">
                        <label for="tanggal_terima">Tanggal Terima</label>
                        <input type="date" class="form-control" id="tanggal_terima">
                        <span class="text-danger text-sm-left" id="errorTanggal_terima"></span>
                    </div>
                    <div class="form-group">
                        <label for="jumlah">Jumlah</label>
                        <input type="number" class="form-control" id="jumlah" min="1">
                        <span class="text-danger text-sm-left" id="errorJumlah"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="Insert()">Submit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/perbaikan/tambah_perbaikan.js"></script>
}